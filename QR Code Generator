<body>
    <div class="container">
        <h1>Blue QR Code Generator</h1>
        <p>Enter text or URL to generate a QR code:</p>
        
        <input type="text" id="qr-input" placeholder="Enter text or URL here...">
        <button id="generate-btn">Generate QR Code</button>
        
        <div id="qr-code"></div>
        <a href="#" id="download-btn" class="download-btn" download="qrcode.png">Download QR Code</a>
    </div>
    
    <script>
        document.getElementById('generate-btn').addEventListener('click', function() {
            const inputText = document.getElementById('qr-input').value.trim();
            const qrCodeContainer = document.getElementById('qr-code');
            const downloadBtn = document.getElementById('download-btn');
            
            if (inputText === '') {
                alert('Please enter some text or URL');
                return;
            }
            
            // Clear previous QR code
            qrCodeContainer.innerHTML = '';
            
            // Create QR code image with blue color
            const qrCodeImg = document.createElement('img');
            const encodedText = encodeURIComponent(inputText);
            qrCodeImg.src = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodedText}&color=1976D2`;
            qrCodeImg.alt = 'QR Code';
            
            qrCodeContainer.appendChild(qrCodeImg);
            
            // Set download link
            downloadBtn.href = qrCodeImg.src;
            downloadBtn.style.display = 'inline-block';
        });
    </script>
</body>
</html>
